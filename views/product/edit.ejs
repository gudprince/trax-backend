<!DOCTYPE html>
<html lang="en">
    <%- include('../layouts/header'); -%>
    <body>
        <div class="container-scroller">
            <%- include('../layouts/navbar'); -%>
            <div class="container-fluid page-body-wrapper">
                <%- include('../layouts/sidebar'); -%>
                <div class="main-panel">
                    <div class="content-wrapper">
                        <div class="page-header">
                            <h3 class="page-title">
                              Product
                            </h3>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Edit Product</h4>
                                <div class="row">
                                    <div class="col-md-8">
                                        <form class="" id=""  method="POST" action="/product/update/<%= product._id %>"  enctype="multipart/form-data">
                                            <div class="row">
                                                <div class="col-md-12">
												    <div class="form-group">
													    <label for="name">Name</label>
													    <input id="name" class="form-control" name="name" type="text" value="<%= product.name %>" required>
												    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
												    <div class="form-group">
													    <label for="price">Price</label>
													    <input id="price" class="form-control" name="price" type="number" value="<%= product.price %>" required>
												    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
													    <label for="image">Image</label>
													    <input id="image" class="form-control" name="image" type="file" >
												    </div>
												</div>   
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
												    <div class="form-group">
                                                        <label>Category</label>
                                                        <select class="js-example-basic-single w-100" name="categoryId" required>
                                                            <option value="AL">Select Category</option>
                                                            <% for (var i = 0; i < cat.length; i++) { %>
                                                            <% if (product.categoryId.name == cat[i].name) { %>
                                                            <option value="<%= cat[i]._id %>" selected><%= cat[i].name %></option>
                                                            <%} else { %>
                                                            <option value="<%= cat[i]._id %>" ><%= cat[i].name %></option>
                                                            <% } %>
                                                            <% } %>
                                                        </select>
                                                    </div>
                                                </div> 
                                                <div class="col-md-6">
												    <div class="form-group">
                                                        <label>Model</label>
                                                        <select class="js-example-basic-single w-100" name="modelId" required>
                                                            <option value="AL">Select Model</option>
                                                            <% for (var i = 0; i < model.length; i++) { %>
                                                            <% if (product.modelId.name == model[i].name) { %>
                                                            <option value="<%= model[i]._id %>" selected><%= model[i].name %></option>
                                                            <%} else { %>
                                                            <option value="<%= model[i]._id %>" ><%= model[i].name %></option>
                                                            <% } %>
                                                            <% } %>
                                                        </select>
                                                    </div>
                                                </div>   
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="exampleTextarea1">Description</label>
                                                        <textarea class="form-control summernote" id="exampleTextarea1" rows="4" name="description" required><%= product.description %></textarea>
                                                    </div>
                                                </div>    
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
												    <div class="form-check form-check-success mb-2">
                                                        <label class="form-check-label">
                                                        <input class="checkbox" type="checkbox" name="status" <%=product.status ? "checked" : ""%>>
                                                            Status
                                                        </label>
                                                    </div>
                                                </div>    
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
												    <div class="form-check form-check-success mb-4">
                                                        <label class="form-check-label">
                                                        <input class="checkbox" type="checkbox" name="feature" <%=product.feature ? "checked" : ""%>>
                                                          Feature
                                                        </label>
                                                    </div>
                                                </div>    
                                            </div>
                                            <input class="btn btn-primary mb-4" type="submit" value="Update">
										</form>
                                    </div>
                                    <div class="col-md-4">
                                        <div id="lightgallery" class="lightGallery">
                                            <a href="#" class="image-tile"><img src="<%=product.image%>" alt="image small"></a>
                                          </div>
                                    </div>
                                </div>
                            </div>       
                        </div>
                        <%- include('../layouts/footer'); -%>
                        <%- include('../layouts/scripts'); -%>
                    </div>
                </div>
            </div>
		</div>
    </body>
</html>